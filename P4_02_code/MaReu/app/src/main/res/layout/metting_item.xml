<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/item_metting_list_icon"
        android:layout_width="@dimen/size_icon_meeting_item"
        android:layout_height="@dimen/size_icon_meeting_item"
        android:layout_marginStart="@dimen/margin_metting_item"
        android:layout_marginTop="@dimen/margin_metting_item"
        android:layout_marginBottom="@dimen/margin_metting_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/circle_12dp"
        app:civ_border_color="@color/color_border"
        app:civ_border_width="@dimen/border_circle_metting_item"
        app:civ_shadow="true"
        app:civ_shadow_radius="@dimen/shadow_radius_metting_item"
        app:civ_shadow_color="@color/color_text_under"/>

    <TextView
        android:id="@+id/item_metting_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_metting_item"
        android:textSize="@dimen/size_text_normal"
        android:textStyle="bold"
        android:textColor="@color/color_text_normal"
        android:text="NOM DE LA REUNION"
        app:layout_constraintBottom_toBottomOf="@+id/item_metting_list_icon"
        app:layout_constraintStart_toEndOf="@+id/item_metting_list_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_metting_list_name_participant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_metting_item"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="collaborators ..."
        android:textColor="@color/color_text_under"
        android:textSize="@dimen/size_text_normal"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_metting_list_icon"
        app:layout_constraintTop_toBottomOf="@id/item_metting_list_name" />

    <ImageButton
        android:id="@+id/item_metting_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_metting_item"
        android:background="@null"
        android:contentDescription="delete"
        app:layout_constraintBottom_toBottomOf="@+id/item_metting_list_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_metting_list_name"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>